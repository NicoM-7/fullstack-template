{
  "compilerOptions": {
    "baseUrl": "./",                  
    "paths": {
      "@/*": ["src/*"]                
    },
    "target": "ES2020",                      
    "module": "CommonJS",                    
    "lib": ["ES2020"],                       
    "outDir": "./dist",                      
    "rootDir": "./src",                      
    "strict": true,                          
    "esModuleInterop": true,                 
    "moduleResolution": "node",              
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                    
    "resolveJsonModule": true,              
    "noImplicitAny": false                   
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
